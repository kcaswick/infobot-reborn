# Infobot Reborn - Environment Variables
# Copy this file to .env and fill in your values.

# Discord bot token (required to run the Discord bot)
# Get one at https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# LLM configuration
# Base URL for any OpenAI-compatible API (vLLM, ollama, etc.)
LLM_BASE_URL=http://localhost:11434/v1
# Model name to request from the LLM server
LLM_MODEL=qwen3:1.7b

# Database
# Path to the SQLite database file
DATABASE_PATH=data/infobot.db

# Logging
LOG_LEVEL=INFO
